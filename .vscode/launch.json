    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend Debug (uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "server:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/backend/.env",
            "justMyCode": false
        },
        {
            "name": "Backend Debug (server.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/backend/.env",
            "justMyCode": true,
            "purpose": ["debug-in-terminal"]
        },
        {
            "name": "Frontend Dev Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev-server"
            ],
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Run Both Servers",
            "configurations": [
                "Backend Debug (uvicorn)",
                "Frontend Dev Server"
            ]
        }
    ]
}