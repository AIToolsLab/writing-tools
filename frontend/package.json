{
	"name": "thoughtful-ai-app",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/AIToolsLab/writing-tools"
	},
	"license": "MIT",
	"type": "module",
	"config": {
		"app_to_debug": "word",
		"app_type_to_debug": "desktop",
		"dev_server_port": 3000
	},
	"scripts": {
		"build": "webpack --mode production",
		"build:dev": "webpack --mode development",
		"dev-server": "webpack serve --mode development",
		"start": "office-addin-debugging start manifest.xml",
		"start:desktop": "office-addin-debugging start manifest.xml desktop",
		"start:web": "office-addin-debugging start manifest.xml web",
		"stop": "office-addin-debugging stop manifest.xml",
		"validate": "office-addin-manifest validate manifest.xml",
		"validate:prod": "office-addin-manifest validate -p dist/manifest.xml",
		"watch": "webpack --mode development --watch",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
		"office-lint": "office-addin-lint check",
		"office-lint:fix": "office-addin-lint fix",
		"format": "prettier --write \"src/**/*.{js,ts,tsx,json,css,md}\"",
		"format:check": "prettier --check \"src/**/*.{js,ts,tsx,json,css,md}\"",
		"format:file": "prettier --write",
		"lint:file": "eslint --fix",
		"format:staged": "prettier --write $(git diff --cached --name-only --diff-filter=ACMR | grep -E '\\.(js|ts|tsx)$' | xargs)",
		"lint:staged": "eslint --fix $(git diff --cached --name-only --diff-filter=ACMR | grep -E '\\.(js|ts|tsx)$' | xargs)",
		"add-pragma": "prettier --insert-pragma --write",
		"remove-pragma": "prettier --require-pragma false --write",
		"style": "yarn lint && yarn format:check",
		"style:fix": "yarn lint:fix && yarn format",
		"prepare": "husky",
		"test": "jest"
	},
	"dependencies": {
		"@auth0/auth0-react": "^2.2.4",
		"@lexical/react": "^0.16.1",
		"@microsoft/fetch-event-source": "^2.0.1",
		"@radix-ui/react-slot": "^1.2.3",
		"@react-hook/window-size": "^3.1.1",
		"@types/react-transition-group": "^4.4.12",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"core-js": "^3.37.1",
		"jotai": "^2.12.5",
		"lexical": "^0.16.1",
		"lucide-react": "^0.544.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^5.2.1",
		"react-remark": "^2.1.0",
		"react-textarea-autosize": "^8.5.3",
		"react-transition-group": "^4.4.5",
		"regenerator-runtime": "^0.14.1",
		"tailwind-merge": "^3.3.1",
		"tw-animate-css": "^1.4.0"
	},
	"devDependencies": {
		"@babel/core": "^7.24.0",
		"@babel/preset-env": "^7.25.4",
		"@babel/preset-typescript": "^7.23.3",
		"@biomejs/biome": "2.0.6",
		"@eslint/eslintrc": "^3.3.1",
		"@tailwindcss/cli": "^4.1.11",
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/typography": "^0.5.16",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.25",
		"@types/office-js": "^1.0.377",
		"@types/office-runtime": "^1.0.35",
		"@types/react": "^18.2.64",
		"@types/react-dom": "^18.2.21",
		"@types/webpack": "^5.28.5",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"@typescript-eslint/utils": "^8.33.1",
		"acorn": "^8.11.3",
		"autoprefixer": "^10.4.21",
		"babel-loader": "^9.1.3",
		"copy-webpack-plugin": "^12.0.2",
		"css-loader": "^6.8.1",
		"es6-promise": "^4.2.8",
		"eslint": "^9.0.0",
		"eslint-plugin-office-addins": "4",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"file-loader": "^6.2.0",
		"globals": "^16.2.0",
		"html-loader": "^5.0.0",
		"html-webpack-plugin": "^5.6.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"less": "^4.2.0",
		"less-loader": "^12.2.0",
		"lightningcss": "^1.30.2",
		"lint-staged": "^14.0.1",
		"office-addin-cli": "^1.6.5",
		"office-addin-debugging": "^6.0.3",
		"office-addin-dev-certs": "^1.13.5",
		"office-addin-lint": "^2.3.5",
		"office-addin-manifest": "^1.13.6",
		"office-addin-mock": "^2.4.6",
		"office-addin-prettier-config": "^1.2.1",
		"office-addin-test-helpers": "^1.5.5",
		"office-addin-test-server": "^1.5.5",
		"os-browserify": "^0.3.0",
		"postcss": "^8.5.4",
		"postcss-loader": "^8.1.1",
		"process": "^0.11.10",
		"source-map-loader": "^5.0.0",
		"style-loader": "^4.0.0",
		"tailwindcss": "^4.1.8",
		"ts-jest": "^29.2.6",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.2",
		"typescript-eslint": "^8.33.1",
		"webpack": "^5.95.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.2.1"
	},
	"browserslist": [
		"ie 11"
	],
	"lint-staged": {
		"**/*.{js,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
